 .bdr-border {
    position:relative;
  }
  .bdr-border::after {
    content:"";
    position:absolute;
    z-index:1;
    pointer-events:none;
    border:1px solid #f00;
    top:0;
    bottom:0;
    left:0;
    right:0;
    background:none;
    border-color:#f00;
    border-radius:2px
  }
  @media only screen and (-webkit-min-device-pixel-ratio:2) {
    .bdr-border::after {
      right:-100%;
      bottom:-100%;
      transform:scale(.5);
      transform-origin:0 0;
      border-radius:4px
    }
  }
