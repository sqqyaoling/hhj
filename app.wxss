.bdr-l {
	position:relative
}
.bdr-l:after {
	height:100%;
	content:'';
	width:1px;
	border-left:1px solid #f1f2f6;
	position:absolute;
	top:0;
	left:0;
	transform:scaleX(0.5);
	z-index:10
}
.bdr-r {
	position:relative
}
.bdr-r:after {
	height:100%;
	content:'';
	width:1px;
	border-right:1px solid #f1f2f6;
	position:absolute;
	top:0;
	right:0;
	transform:scaleX(0.5);
	z-index:10
}
.bds-top {
	position:relative
}
