  <view class="help-main">
    <image class='logos' mode="widthFix" src='/image/hpic2.jpg'></image>
    <view class='help-con'>
      <view class='topImg'>
         <image src='{{imageUrl}}' class='HeadPortrait'></image> 
        <text class='ui-blocks txt'>{{userName}}</text>
      </view>
      <view class='info'>
        <view class='ui-conter'>
          <text class='ui-blocks'>邀请你加入营养战队，</text>
          <view><text>两人可</text><text class='color'>各得一瓶豆浆！</text></view>
        </view>
      </view>
